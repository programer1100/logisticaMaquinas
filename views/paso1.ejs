<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="paso1.css">
    <script src = "/socket.io/socket.io.js"></script>
    <title>Recolección</title>
</head>
<body>
    <div class="titulo">
        <h1>Seleccione configuración</h1>
    </div>
   
    <div class="opciones" style="font-size: 2.2ch;">
        <img src="escritorio.png">
        <h1>Mesa de trabajo</h1>
        <br>
        <select id="mesaS">
            <option selected="selected" value="0">Mesa de trabajo</option>
            <option value="fresa">Fresadora</option>
            <option value="torno">Torno</option>
        </select>  
    </div>
    <div class="opciones" style="font-size: 2.2ch;">
        <img src="cajon.png">
        <h1>Slot de almacen</h1>
        <br>
        <select id="slot">
            <option selected="selected" value="0">Slot</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
        </select>  
    </div>
    <div class="container">
        <a href="/proceso">

        <button class="center-button">Avanzar</button><img class="img" src="proximo.png">
        </a>
    </div>
    <script>
        var socket = io()
        let dropListM = document.getElementById('mesaS')
        let dropList1 = document.getElementById('slot')
        let pS,sl
        dropListM.onchange = (ev)=>{
                pS = dropListM.value
                socket.emit("inicio", pS)
            }
            
            dropList1.onchange = (ev)=>{
                sl = dropList1.value
                socket.emit("slot", sl) 
            }

    </script>
</body>
</html>